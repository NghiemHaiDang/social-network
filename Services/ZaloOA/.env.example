# ===========================================
# ZaloOA Service - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# MongoDB
ConnectionStrings__DefaultConnection=mongodb://localhost:27017
ConnectionStrings__DatabaseName=ZaloOADb

# JWT (must match Identity service)
Jwt__Secret=YourSuperSecretKeyHere_MustBeAtLeast32Characters!
Jwt__Issuer=Identity.API
Jwt__Audience=Social.Client

# Zalo OA Configuration
Zalo__AppId=your_zalo_app_id
Zalo__AppSecret=your_zalo_app_secret
Zalo__OAuthAuthorizeUrl=https://oauth.zaloapp.com/v4/oa/permission
Zalo__OAuthTokenUrl=https://oauth.zaloapp.com/v4/oa/access_token
Zalo__OpenApiBaseUrl=https://openapi.zalo.me
Zalo__DefaultRedirectUri=https://your-domain.ngrok-free.dev/api/zalooa/oauth/callback
Zalo__FrontendBaseUrl=http://localhost:3000

# RabbitMQ
RabbitMQ__Enabled=true
RabbitMQ__Host=rabbitmq
RabbitMQ__Port=5672
RabbitMQ__Username=admin
RabbitMQ__Password=your_rabbitmq_password
RabbitMQ__VirtualHost=/
